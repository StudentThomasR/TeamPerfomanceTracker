@model TeamPerfomanceTracker.ViewModels.CreateTeamViewModel
@{
    ViewBag.Title = "CreateTeam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateTeam</h2>

@using (Html.BeginForm())
{
    <div class="spread-table">
        <table>
            <tr>
                <td>@Html.LabelFor(c => c.TeamName, "Team Name:")</td>
                <td>@Html.TextBoxFor(c => c.TeamName) </td>
                <td>@Html.ValidationMessageFor(c => c.TeamName)</td>
            </tr>
        </table>
    </div>

    <a href="../Home/SMHomePage" class="green-button">Go Back</a>
    <input class="green-button" type="submit" value="CreateTeam" />
}